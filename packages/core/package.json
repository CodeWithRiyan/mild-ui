{
  "name": "@mild-ui/core",
  "version": "0.3.1",
  "description": "Pure SASS design system with utility classes - like Tailwind CSS but with mild- prefix to avoid conflicts",
  "main": "dist/mild-ui.css",
  "style": "dist/mild-ui.css",
  "sass": "src/sass/index.scss",
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "files": [
    "dist/",
    "src/sass/",
    "src/utilities/"
  ],
  "scripts": {
    "build": "pnpm run build:sass",
    "build:sass": "pnpm run sass:compile && pnpm run sass:minify",
    "sass:compile": "sass src/sass/index.scss:dist/mild-ui.css --style=expanded --source-map",
    "sass:minify": "sass src/sass/index.scss:dist/mild-ui.min.css --style=compressed --no-source-map",
    "dev": "pnpm run sass:watch",
    "sass:watch": "sass src/sass/index.scss:dist/mild-ui.css --watch --style=expanded --source-map",
    "docs:build": "sassdoc src/sass src/utilities --dest docs --config .sassdocrc",
    "clean": "rimraf dist docs",
    "prepare": "pnpm run build"
  },
  "devDependencies": {
    "rimraf": "^5.0.0",
    "sass": "^1.69.5",
    "sassdoc": "^2.7.4"
  },
  "exports": {
    ".": {
      "sass": "./src/sass/index.scss",
      "style": "./dist/mild-ui.css",
      "default": "./dist/mild-ui.css"
    },
    "./css": "./dist/mild-ui.css",
    "./css/min": "./dist/mild-ui.min.css",
    "./sass": "./src/sass/index.scss",
    "./sass/*": "./src/sass/*",
    "./utilities": "./src/utilities/index.scss",
    "./utilities/*": "./src/utilities/*",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  }
}