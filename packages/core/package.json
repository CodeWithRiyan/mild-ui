{
  "name": "@mild-ui/core",
  "version": "0.3.1",
  "description": "Universal design system built with SASS/SCSS - framework agnostic core with zero dependencies",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "files": [
    "dist/",
    "src/sass/",
    "src/compiled/"
  ],
  "scripts": {
    "build": "pnpm run build:sass && pnpm run build:ts && pnpm run build:bundle",
    "build:sass": "node scripts/build-sass.js",
    "build:ts": "tsc",
    "build:bundle": "vite build",
    "dev": "pnpm run build:sass && tsc --watch",
    "sass:watch": "node scripts/watch-sass.js",
    "clean": "rimraf dist",
    "docs:generate": "node scripts/generate-docs.js",
    "docs:build": "pnpm run docs:generate",
    "docs:serve": "pnpm run docs:generate && serve docs -p 3001",
    "docs:watch": "nodemon --watch src --ext ts,scss --exec \"pnpm docs:generate\"",
    "debug:components": "node scripts/debug-components.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "autoprefixer": "^10.4.16",
    "chokidar": "^4.0.3",
    "cssnano": "^6.0.1",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "rimraf": "^5.0.0",
    "sass": "^1.69.5",
    "serve": "^14.2.1",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./css": "./dist/mild-ui.css",
    "./css/min": "./dist/mild-ui.min.css",
    "./themes/light": "./dist/themes/light.css",
    "./themes/dark": "./dist/themes/dark.css",
    "./tokens": "./dist/tokens.json",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  }
}
