{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx", // For React, remove for Vue/Svelte
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@mild-ui/react": ["../../packages/react/src"], // Adjust per framework
      "@mild-ui/core": ["../../packages/core/src"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx", // React only
    // "src/**/*.vue", // Vue only
    // "src/**/*.svelte", // Svelte only
    ".storybook/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "storybook-static"]
}