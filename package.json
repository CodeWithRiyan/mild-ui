{
  "name": "@mild-ui/monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "test:coverage": "pnpm -r test:coverage",
    "lint": "eslint . --ext .ts,.tsx,.vue,.svelte",
    "lint:fix": "eslint . --ext .ts,.tsx,.vue,.svelte --fix",
    "type-check": "pnpm -r type-check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "storybook:react": "pnpm --filter storybook-react dev",
    "storybook:vue": "pnpm --filter storybook-vue dev",
    "storybook:svelte": "pnpm --filter storybook-svelte dev",
    "storybook:build": "pnpm -r --filter 'storybook-*' build-storybook",
    "qa": "tsx scripts/qa-check.ts",
    "pre-commit": "lint-staged",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "clean": "pnpm -r clean",
    "reset": "pnpm clean && rm -rf node_modules && pnpm install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "chalk": "^5.4.1"
  }
}
