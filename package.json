{
  "name": "@mild-ui/monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "test": "pnpm -r test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky install",
    "storybook:react": "cd storybook/react && pnpm dev",
    "storybook:vue": "cd storybook/vue && pnpm dev",
    "storybook:svelte": "cd storybook/svelte && pnpm dev",
    "storybook:build:react": "cd storybook/react && pnpm build",
    "storybook:build:vue": "cd storybook/vue && pnpm build",
    "storybook:build:svelte": "cd storybook/svelte && pnpm build",
    "storybook:build:all": "pnpm storybook:build:react && pnpm storybook:build:vue && pnpm storybook:build:svelte",
    "storybook:preview:react": "cd storybook/react && pnpm preview",
    "storybook:preview:vue": "cd storybook/vue && pnpm preview",
    "storybook:preview:svelte": "cd storybook/svelte && pnpm preview",
    "packages:build": "pnpm --filter @mild-ui/core build && pnpm --filter @mild-ui/react build && pnpm --filter @mild-ui/vue build && pnpm --filter @mild-ui/svelte build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  }
}
