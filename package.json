{
  "name": "@mild-ui/monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "test": "pnpm -r test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "storybook": "pnpm storybook:react",
    "storybook:react": "pnpm --filter ./storybook/react dev",
    "storybook:vue": "pnpm --filter ./storybook/vue dev",
    "storybook:svelte": "pnpm --filter ./storybook/svelte dev",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  }
}
